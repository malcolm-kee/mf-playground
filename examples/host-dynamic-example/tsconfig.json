{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "module": "ES2022",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
